    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Ref</th>
                <td>{{ produit.ref }}</td>
            </tr>
            <tr>
