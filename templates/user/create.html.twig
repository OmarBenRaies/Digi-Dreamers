
{% extends 'front/base.html.twig' %}

{% block body %}


    <div class="login-form-area">
        {{ form_start(userform) }}
        <div class="login-form">

            <div class="login-heading">
                <span>Login</span>
                <p>Enter Login details to get access</p>
            </div>

            <div class="input-box">
                <div class="single-input-fields">
                    <div class="row">
                        <div class="col">
                            <label>Nom</label>
                            {{ form_widget(userform.nom, { 'attr' : { 'placeholder' : 'Nom' } }) }}
                        </div>
                        <div class="col">
                            <label>Prenom</label>
                            {{ form_widget(userform.prenom, { 'attr' : { 'placeholder' : 'Prenom' } }) }}
                        </div>
                    </div>

                </div>

                <div class="single-input-fields">
                    <label>Email</label>
                    {{ form_widget(userform.email, { 'attr' : { 'placeholder':'Email' } }) }}
                </div>

                <div class="single-input-fields">
                    <label>Password</label>
                    {{ form_widget(userform.password, { 'attr' : { 'placeholder' : 'Enter Password' } }) }}
                </div>

                <div class="single-input-fields">
                    <label>Confirm password</label>
                    {{ form_widget(userform.confirmPassword, { 'attr' : { 'placeholder' : 'confirm Password' } }) }}
                </div>

                <div class="single-input-fields">
                    <label>Telephone</label>
                    {{ form_widget(userform.telephone, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>

                <div class="single-input-fields">
                    <label>CIN</label>
                    {{ form_widget(userform.cin, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>

                <div class="single-input-fields">
                    <label>Role</label>
                    {{ form_widget(userform.role, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>


            </div>

            <div class="login-footer">
                {{ form_widget(userform.submit, { 'attr' : { 'class' : 'submit-btn3' } }) }}
            </div>
        </div>
        {{ form_end(userform) }}
    </div>


    <ul>
        {% for error in errors %}
            <li>{{ error.message }}</li>
        {% endfor %}
    </ul>


{% endblock %}


{% block javascripts %}
    <script src="{{ asset('assets/js/sweetalert2@11.js') }}"></script>
    {% if errors|length > 0  %}
        {% set errorString = "" %}
        {% for error in errors %}
            {% set errorString = errorString~error.message~" "  %}
        {% endfor %}
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: '{{ errorString }}',
            })
        </script>
    {% endif %}
{% endblock %}