



{% extends 'back/base.html.twig' %}
{%block body%}

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">


            <div class="row">
                <div class="col-md-12"  style="display: flex; justify-content: center;align-items:center;width: 100%" >
                    <div class="card-box">
                        <div class="dropdown pull-right">
                            <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                                <i class="mdi mdi-dots-vertical"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">Action</a>
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">Another action</a>
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">Something else</a>
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">Separated link</a>
                            </div>
                        </div>



                        <h4 class="header-title m-t-0 m-b-30">Create new Don</h4>
                        {{ form_start(f, {attr: {novalidate: 'novalidate'}}) }}


                        <div class="form-group">
                            <label for="nom">Somme</label>

                            {{ form_widget(f.somme, {'attr': {'class': 'form-control','readonly':true}}) }}
                            {{ form_errors(f.somme, {'attr': {'class': 'text-danger'}}) }}


                        </div>

                        <div class="form-group">

                            <label for="nom">Evenement</label>


                            {{ form_widget(f.evenement, {
                                'attr': {
                                    'class': 'event-select form-control',
                                }
                            }) }}
                            {{ form_errors(f.evenement, {'attr': {'class': 'text-danger'}}) }}

                        </div>

                        <div class="form-group">

                            <label for="nom">Association</label>


                            {{ form_widget(f.association, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(f.association, {'attr': {'class': 'text-danger'}}) }}

                        </div>


                        <div class="form-group text-right m-b-0">
                            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>



                        </div>

                        {{form_end(f)}}

                    </div>
                </div>
            </div><a href="{{ path('app_association_index') }}">back to list</a>
        </div>
    </div>
    <script>
        $(function() {
            // event listener to the event select field
            $('.event-select').on('change', function() {
                var eventId = $(this).val();
                // AJAX request to the server
                $.ajax({
                    url: '{{ path('app_don_total') }}',
                    data: {
                        'id': eventId,
                    },
                    success: function(total) {
                        $('input[name="{{ f.somme.vars.full_name }}"]').val(total.total); // set the value of the price input field


                    },
                    error: function(xhr, status, error) {
                        console.log(error); // log any errors to the console

                    }
                });
            });
        });
    </script>


{%endblock%}