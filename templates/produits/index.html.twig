                                    <a href="javascript:void(0);" class="dropdown-item">Separated link</a>
                                </div>
                            </div>
                            <h4 class="m-t-0 header-title">Liste Produits</h4>
                            <p class="text-muted font-14 m-b-20">
                            <table>
                                <tr>
                                    <td>
                                        <a href="{{ path('app_produits_new') }}">
                                            <button type="button" class="btn btn-primary">Ajouter Produits</button>                            </p>

                                        </a>


                                    </td>
                            </table>

                            <table class="table">
                                <thead class="thead-dark">
                                <tr>
                                    <th>Reference</th>
                                    <th>Description</th>
                                    <th>Prix</th>
                                    <th>Image</th>
                                    <th>QStock</th>
                                    <th>Categorie</th>



                                </tr>
                                </thead>
                                <tbody>
                                {% for p in  produits %}
                                    <tr>
                                        <td>{{ p.ref }}</td>
                                        <td>{{ p.Description }}</td>
                                        <td>{{ p.Prix }}</td>
                                        <td>{{ p.image }}</td>
                                        

                                        <td><button class="btn btn-success"><a href="{{ path('app_produits_edit',{'id':p.id})}}">Modifier </a></button></td>
                                         <td><button class="btn btn-danger"><a href="/produits/{{p.id}}" onclick="return confirm('voulez-vus supprimer ce produit? {{p.ref()}}');">supp </a></button></td>

                                    </tr>


                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}