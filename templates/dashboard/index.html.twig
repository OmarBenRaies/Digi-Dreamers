{% extends 'back/base.html.twig' %}

{% block body %}
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <!-- Order Statistics -->
            <div class="col-md-6 col-lg-4 col-xl-4 order-0 mb-4">
                <div class="card h-100">

                    <div class="card-body">
                            <div id="myChart" class="align-content-center" style="width: 300px; height: 500px;"></div>
                            {% set data = [] %}
                            {% for result in results %}
                                {% set data = data|merge([{value: result.valeur, name: result.value}]) %}
                            {% endfor %}
                        {% block jsChart %}
                            {#<script src="node_modules/echarts/dist/echarts.min.js"></script> #}
                            {#  <script src="https://cdn.jsdelivr.net/npm/echarts/dist/echarts.min.js"></script>#}
                            <script>
                                var Chart = echarts.init(document.getElementById('myChart'));
                                Chart.setOption({
                                    title: {
                                        text: 'Evénements '
                                    },
                                    toolbox: {
                                        show: true,
                                        feature: {
                                            mark: { show: true },
                                            dataView: { show: true, readOnly: true },

                                            saveAsImage: { show: true }
                                        }
                                    },
                                    tooltip: {
                                        trigger: 'item'
                                    },
                                    series: [{
                                        name: 'Gouvernorat',
                                        type: 'pie',

                                        data: [  {% for result in results %}

                                            {value: {{ result.valeur }}, name: '{{ result.value }}'},
                                            {% endfor %}
                                        ], emphasis: {
                                            itemStyle: {
                                                shadowBlur: 10,
                                                shadowOffsetX: 0,
                                                shadowColor: 'rgba(0, 0, 0, 0.5)'
                                            }
                                        }

                                    }]
                                });

                            </script>
                        {% endblock %}
                    </div>
                </div>
            </div>
            <!--/ Order Statistics -->

            <!-- Expense Overview -->

            <!--/ Expense Overview -->

            <!-- Transactions -->
            <div class="col-md-6 col-lg-4 order-2 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="card-title m-0 me-2">Produits</h5>
                        <div class="dropdown">
                            <button
                                    class="btn p-0"
                                    type="button"
                                    id="transactionID"
                                    data-bs-toggle="dropdown"
                                    aria-haspopup="true"
                                    aria-expanded="false">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="transactionID">
                                <a class="dropdown-item" href="#">Last 28 Days</a>
                                <a class="dropdown-item" href="#">Last Month</a>
                                <a class="dropdown-item" href="#">Last Year</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card-body">
                            <div id="myChart1" class="align-content-center" style="width: 300px; height: 500px;"></div>
                            {% set data = [] %}
