                                            saveAsImage: { show: true }
                                        }
                                    },
                                    tooltip: {
                                        trigger: 'item'
                                    },
                                    series: [{
                                        name: 'Catégorie',
                                        type: 'pie',

                                        data: [  {% for result in results1 %}

                                            {value: {{ result.valeur }}, name: '{{ result.value }}'},
